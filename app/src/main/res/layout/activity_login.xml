<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.dashboard.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/icon_main_green"
                android:layout_marginTop="130dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edit_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="55dp"
                android:padding="10dp"
                android:hint="아이디 주소 또는 이메일"
                android:textSize="12dp"
                android:background="@drawable/edit_round_grey" />

            <EditText
                android:id="@+id/edit_pw"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:hint="패스워드"
                android:textSize="12dp"
                android:background="@drawable/edit_round_grey" />

            <CheckBox
                android:id="@+id/check_auto_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="로그인 상태 유지"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="44dp"
                android:textSize="16dp"
                android:text="로그인"
                android:textColor="@color/howareu_main"
                android:background="@drawable/button_round_white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="40dp">

                <TextView
                    android:id="@+id/find_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="아이디 찾기"
                    android:textSize="12dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#707070"
                    android:text="|"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/find_pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="패스워드 찾기"
                    android:textSize="12dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#707070"
                    android:text="|"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="회원가입"
                    android:textSize="12dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>