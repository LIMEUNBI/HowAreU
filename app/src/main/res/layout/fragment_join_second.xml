<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.dashboard.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:text="본인인증"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edit_birth"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_round_grey"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:hint="생년월일 / YYYYMMDD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/btn_man"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/edit_round_grey"
                        android:layout_weight="1"
                        android:layout_marginRight="0.5dp"
                        android:textSize="12dp"
                        android:hint="남자" />

                    <Button
                        android:id="@+id/btn_woman"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/edit_round_grey"
                        android:layout_marginLeft="0.5dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:hint="여자" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/edit_round_grey"
                        android:padding="10dp"
                        android:textSize="12dp"
                        android:hint="휴대폰번호-없이 번호 입력" />

                    <TextView
                        android:id="@+id/txt_phone_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:text="본인 인증"
                        android:textColor="@color/howareu_main"
                        android:textSize="14dp" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_round_grey"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:hint="이메일" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="사용자구분"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/btn_student"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/edit_round_grey"
                        android:layout_weight="1"
                        android:layout_marginRight="0.5dp"
                        android:textSize="12dp"
                        android:hint="학생/학부모" />

                    <Button
                        android:id="@+id/btn_adult"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/edit_round_grey"
                        android:layout_marginLeft="0.5dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:hint="대학생" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/edit_school"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/edit_round_grey"
                        android:padding="10dp"
                        android:textSize="12dp"
                        android:hint="학교정보" />

                    <TextView
                        android:id="@+id/txt_school_choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:text="학교검색"
                        android:textColor="@color/howareu_main"
                        android:textSize="14dp" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/edit_year"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/edit_round_grey"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:hint="학년 선택" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>