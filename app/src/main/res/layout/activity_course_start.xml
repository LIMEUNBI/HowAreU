<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.dashboard.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:fontFamily="@font/nanum_square_b"
            android:text="유저님"
            android:textSize="26dp"
            android:textColor="@color/howareu_main"/>

        <RelativeLayout
            android:id="@+id/txt_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_user_name"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/txt_course_find1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_r"
                android:text="진로"
                android:textSize="24dp"
                android:textColor="@color/howareu_main"/>

            <TextView
                android:id="@+id/txt_course_find2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_l"
                android:layout_toRightOf="@+id/txt_course_find1"
                android:text="를"
                android:textSize="24dp"
                android:textColor="@color/howareu_main"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_course_find3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_l"
            android:layout_below="@+id/txt_layout"
            android:text="찾아보시겠어요?"
            android:textSize="24dp"
            android:textColor="@color/howareu_main"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/txt_course_find3"
            android:src="@drawable/creativity_bro" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="50dp"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/btn_course"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/nanum_square_r"
                android:textSize="16dp"
                android:text="진로탐색하기"
                android:textColor="@color/white"
                android:background="@drawable/button_round_green" />

            <TextView
                android:id="@+id/txt_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="7dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_course"
                android:text="건너뛰기"
                android:textSize="12dp"
                android:textColor="@color/text_5b5b5b"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>