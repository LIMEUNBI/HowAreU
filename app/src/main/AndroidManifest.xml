<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kpu.howareu">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Howareu">
        <activity android:name=".activity.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.dashboard.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu2" />
        <activity android:name=".activity.user.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu2" />
        <activity android:name=".activity.user.JoinActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu2" />

        <!-- ======================== Course ======================== -->
        <activity android:name=".activity.course.CourseStartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu2" />
        <activity android:name=".activity.course.CourseQuestion1Activity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu" />
        <activity android:name=".activity.course.CourseQuestion2Activity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu" />
        <activity android:name=".activity.course.CourseQuestion3Activity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu" />
        <activity android:name=".activity.course.CourseQuestion4Activity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu" />
        <activity android:name=".activity.course.CourseQuestion5Activity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu" />
        <activity android:name=".activity.course.CourseQuestion6Activity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu" />
        <activity android:name=".activity.course.CourseQuestion7Activity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu" />
        <activity android:name=".activity.course.CourseRecommendActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu2" />

        <!-- ======================== Community ======================== -->
        <activity android:name=".activity.community.KnowledgeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu2" />
        <activity android:name=".activity.community.EmploymentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu2" />
        <activity android:name=".activity.community.SchoolActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu2" />
        <activity android:name=".activity.community.CommunityActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu2" />

        <!-- ======================== Self ======================== -->
        <activity android:name=".activity.self.SelfInputActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu2" />
        <activity android:name=".activity.self.SelfListActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Howareu2" />

        <!-- ======================== Mentor ======================== -->
        <activity android:name=".activity.mentor.MentorInfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu2" />

        <!-- ======================== Interview ======================== -->
        <activity android:name=".activity.video.InterviewVideoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu2" />
        <activity android:name=".activity.video.VideoPlayActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Howareu2" />

    </application>

</manifest>